.card_list{
	background: rgba(255,255,255,1);
	position: relative;
	display: flex;
	align-items: center;
	min-height: 120rpx;
	padding: 0 30rpx
}
.card_list::after{
	content: "";
	display: block;
	position: absolute;
	bottom: 0;
	left: 50%;
	margin-left: -345rpx;
	width: 690rpx;
	height: 1rpx;
	border-bottom: 1rpx solid rgba(112,112,112,.2)
}